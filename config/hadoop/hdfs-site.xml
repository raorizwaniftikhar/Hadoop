<configuration>
    <!-- Set replication factor to 3 for fault tolerance -->
    <property>
        <name>dfs.replication</name>
        <value>3</value>
    </property>

    <!-- Local directories for NameNode -->
    <property>
        <name>dfs.namenode.name.dir</name>
        <value>file:/usr/local/hadoop/data/hdfs/namenode</value>
    </property>

  <!-- Use Quorum Journal Manager (QJM) for HA -->
  <property>
    <name>dfs.nameservices</name>
    <value>hadoop-ha</value>
  </property>

  <property>
    <name>dfs.ha.namenodes.hadoop-ha</name>
    <value>nn1,nn2</value>
  </property>

  <property>
    <name>dfs.namenode.rpc-address.hadoop-ha.nn1</name>
    <value>namenode-deployment-0.namenode-service.bigdata.svc.cluster.local:8020</value>
  </property>

  <property>
    <name>dfs.namenode.rpc-address.hadoop-ha.nn2</name>
    <value>namenode-deployment-1.namenode-service.bigdata.svc.cluster.local:8020</value>
  </property>

  <property>
    <name>dfs.namenode.http-address.hadoop-ha.nn1</name>
    <value>namenode-deployment-0.namenode-service.bigdata.svc.cluster.local:9870</value>
  </property>

  <property>
    <name>dfs.namenode.http-address.hadoop-ha.nn2</name>
    <value>namenode-deployment-1.namenode-service.bigdata.svc.cluster.local:9870</value>
  </property>

  <property>
    <name>dfs.client.failover.proxy.provider.hadoop-ha</name>
    <value>org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider</value>
  </property>

  <!-- JournalNodes quorum (replace with actual hostnames if using StatefulSets) -->
  <property>
    <name>dfs.namenode.shared.edits.dir</name>
    <value>qjournal://journalnode-0:8485;journalnode-1:8485;journalnode-2:8485/hadoop-ha</value>
  </property>

  <property>
    <name>dfs.ha.automatic-failover.enabled</name>
    <value>true</value>
  </property>

  <property>
    <name>ha.zookeeper.quorum</name>
    <value>zookeeper:2181</value>
  </property>

  <property>
    <name>dfs.journalnode.edits.dir</name>
    <value>/usr/local/hadoop/data/hdfs/journal</value>
  </property>


    <!-- Local directories for DataNode -->
    <property>
        <name>dfs.datanode.data.dir</name>
        <value>file:/usr/local/hadoop/data/hdfs/datanode</value>
    </property>

    <!-- Directory for NameNode checkpoint -->
    <property>
        <name>dfs.namenode.checkpoint.dir</name>
        <value>file:/usr/local/hadoop/data/hdfs/namesecondary</value>
    </property>

    <!-- Directory for NameNode edits -->
    <property>
        <name>dfs.namenode.checkpoint.edits.dir</name>
        <value>file:/usr/local/hadoop/data/hdfs/namesecondary</value>
    </property>

    <!-- Enable WebHDFS for remote access to HDFS -->
    <property>
        <name>dfs.webhdfs.enabled</name>
        <value>true</value>
    </property>

    <!-- Disable HDFS permissions (can be enabled if needed for more security) -->
    <property>
        <name>dfs.permissions</name>
        <value>false</value>
    </property>

    <!-- Set DataNode configurations -->
    <property>
        <name>dfs.datanode.max.transfer.threads</name>
        <value>4096</value>
    </property>

    <property>
        <name>dfs.datanode.handler.count</name>
        <value>30</value>
    </property>

    <property>
        <name>dfs.datanode.directoryscan.interval</name>
        <value>5m</value>
    </property>

    <property>
        <name>dfs.datanode.directoryscan.threads</name>
        <value>4</value>
    </property>

    <!-- Set bandwidth for data node balance -->
    <property>
        <name>dfs.datanode.balance.bandwidthPerSec</name>
        <value>1048576</value>
    </property>

    <property>
        <name>dfs.datanode.balance.max.concurrent.moves</name>
        <value>5</value>
    </property>

    <property>
        <name>dfs.datanode.balance.max.concurrent.moves.threads</name>
        <value>1</value>
    </property>

    <property>
        <name>dfs.datanode.balance.max.concurrent.moves.threads.per.datanode</name>
        <value>1</value>
    </property>

    <property>
        <name>dfs.datanode.balance.max.concurrent.moves.per.datanode</name>
        <value>5</value>
    </property>

    <property>
        <name>dfs.datanode.balance.bandwidthPerSecPerNode</name>
        <value>1048576</value>
    </property>

    <property>
        <name>dfs.datanode.balance.max.concurrent.movesPerNode</name>
        <value>5</value>
    </property>

    <property>
        <name>dfs.datanode.balance.max.concurrent.movesPerNode.threads</name>
        <value>1</value>
    </property>

    <property>
        <name>dfs.datanode.balance.max.concurrent.movesPerNode.threads.per.datanode</name>
        <value>1</value>
    </property>
</configuration>
